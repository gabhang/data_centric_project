<style>
    table,
    th,
    td {
        border: 1px solid black;
    }
</style>

<body>
    <h1>Departments</h1>
    <table>
        <tr>
            <!-- table headers -->
            <th>Department ID</th>
            <th>Name</th>
        </tr>
        <!-- loop through each data to output list -->
        <% departments.forEach((department)=>
            { %>
            <tr>
                <td>
                    <%= department.did %>
                </td>
                <td>
                    <%= department.name %>
                </td>
            </tr>
            <% }) %>
    </table>
    <!-- link to redirect to main page -->
    <a href="/">Home</a>
</body>