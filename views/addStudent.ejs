<body>
    <h1>Add Student</h1>
    <!-- errors outputting...if there's any -->
    <% if (errors !=undefined) { %>
        <ul>
            <% errors.forEach((error)=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>
            <!-- form with action to add student by using POST method -->
            <form action="/addStudent" method="POST">
                <label>Student ID</label>
                <input type="text" name="sid" value="<%= sid%>"><br>
                <label>Name</label>
                <input type="text" name="name" value="<%= name%>"><br>
                <label>GPA</label>
                <input type="number" step="0.1" name="gpa" value="<%= gpa%>">
                <input type="submit" value="Add">
            </form>
            <!-- link to redirect to main page -->
            <a href="/">Home</a>
</body>